{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "globals": {
      "THREE": "writable"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "camelcase": 1,
        "consistent-return": 2,
        "default-case": 2,
        "eol-last": 1,
        "new-cap": 1,
        "new-parens": 1,
        "no-console": 1,
        "no-constant-condition": 2,
        "no-empty": 2,
        "no-extra-parens": 1,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-irregular-whitespace": 1,
        "no-multiple-empty-lines": [1, {"max": 1}],
        "no-new": 2,
        "no-return-assign": 2,
        "no-self-compare": 2,
        "no-trailing-spaces": 1,
        "no-undef": 2,
        "no-undefined": 2,
        "no-unreachable": 2,
        "no-unused-expressions": 2,
        "no-unused-vars": 2,
        "no-use-before-define": 2,
        "semi-spacing": [1, {"before": false, "after": true}],
        "space-before-blocks": [1, "always"],
        "space-before-function-paren": [1, {"anonymous": "always", "named": "never"}],
        "space-in-parens": [1, "never"]
    }
}
